{
	"name": "@labdigital/dataloader-cache-wrapper",
	"version": "0.5.0",
	"author": "Lab Digital <opensource@labdigital.nl>",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"description": "Wrapper around dataloader to cache the results of the loader",
	"keywords": [],
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"scripts": {
		"build": "tsup",
		"check": "pnpm lint && pnpm tsc",
		"dev": "tsup --watch",
		"publish:ci": "pnpm build && pnpm changeset publish",
		"publish:version": "pnpm changeset version && pnpm format",
		"test": "vitest run --coverage",
		"test:ci": "vitest run --coverage",
		"format": "biome format --fix",
		"lint": "biome check",
		"tsc": "tsc --noEmit"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.1",
		"@types/object-hash": "3.0.6",
		"@vitest/coverage-v8": "3.1.1",
		"dataloader": "^2.2.3",
		"tsup": "8.4.0",
		"typescript": "5.8.3",
		"vitest": "3.1.1"
	},
	"peerDependencies": {
		"dataloader": ">=2.0 <3.0",
		"keyv": ">=4.0.0 <6.0.0"
	},
	"dependencies": {
		"@biomejs/biome": "1.9.4",
		"object-hash": "3.0.0"
	},
	"packageManager": "pnpm@10.8.0"
}
